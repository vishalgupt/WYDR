<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/query_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <RelativeLayout
        android:id="@+id/chat_query_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_chat"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/default_round_bck"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_product" />


        <TextView
            android:id="@+id/txtChatQueryText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/image_chat"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:layout_toRightOf="@+id/image_chat"
            android:paddingBottom="10dp"
            android:text="Some text "
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <!--    <ImageView
                android:id="@+id/menu_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/txtMyQueryText"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:padding="2dp"
                android:src="@drawable/ic_action" />-->


    </RelativeLayout>
</LinearLayout>