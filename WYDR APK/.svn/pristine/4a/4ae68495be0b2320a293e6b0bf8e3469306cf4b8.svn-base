<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/txtLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/default_round_bck"
            android:padding="2.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_product" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginLeft="7dp"
            android:text="Requirement"
            android:textAllCaps="true"
            android:textColor="@color/primary_text"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtQueryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:paddingBottom="5dp"
            android:text="some fgfgfdgfdgfdgfdgfdgfdfsdkfhsdijfhidsuhfjdsfhjhsdbfjhb mnjdvkhnjdlkbvjdlbv kjdhnfhkjdjdbfbfhjnjkxhvjdfvbjbfbjhfbvjbdjbvjdbvjfdhjkfdgbjltext "
            android:textColor="@color/text_color"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_posted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtPostedBy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ececec"
            android:paddingBottom="5dp"
            android:paddingEnd="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="POSTED BY: Ravi Jain, Pooja Text Print "
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="#ffececec"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action1" />
    </LinearLayout>
</LinearLayout>