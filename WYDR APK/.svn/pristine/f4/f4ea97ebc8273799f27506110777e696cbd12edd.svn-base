<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <ImageView
            android:id="@+id/logotxt"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_gravity="top|center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="45dp"
            android:gravity="top|center"
            android:padding="3dp"
            android:src="@drawable/login_logo" />

        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logotxt"
            android:layout_marginBottom="2dp"
            android:background="@drawable/edittxt"
            android:gravity="center"
            android:hint="@string/enter_name"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:padding="7dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:typeface="sans" />


        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/edittxt"
            android:gravity="center"
            android:hint="@string/enter_email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="7dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:typeface="sans" />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/edittxt"
            android:gravity="center"
            android:hint="@string/enter_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="7dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:typeface="sans" />

        <ImageView
            android:id="@+id/showpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/password"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/email"
            android:layout_centerVertical="true"
            android:src="@drawable/registrationeye"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


        <EditText
            android:id="@+id/compname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/edittxt"
            android:gravity="center"
            android:hint="@string/enter_company"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:padding="7dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:typeface="sans" />


        <AutoCompleteTextView
            android:id="@+id/cityreg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/compname"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/edittxt"
            android:gravity="center"
            android:hint="@string/enter_city"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:padding="7dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:typeface="sans" />


        <!-- Login Button -->
        <Button
            android:id="@+id/registernext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cityreg"

            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dip"

            android:background="@drawable/register_button"
            android:text="@string/btn_register"
            android:textColor="@color/bg_main"
            android:textSize="15dp"
            android:textStyle="bold" />


        <!-- Link to Login Screen -->
        <TextView
            android:id="@+id/clickingtxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registernext"
            android:layout_marginTop="20dp"
            android:autoLink="all"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:linksClickable="true"
            android:textAllCaps="false"
            android:textColor="#eee"
            android:textColorLink="#eee"
            android:textSize="13dp" />


    </RelativeLayout>
</ScrollView>


