<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageViewMemberList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/avtar" />

    <TextView
        android:id="@+id/textViewMemberListName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/imageViewMemberList"
        android:layout_toLeftOf="@+id/imageViewDeleteMember"
        android:layout_toRightOf="@+id/imageViewMemberList"
        android:text="Rajiv"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>