<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="1dp"
    android:background="#fff"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/coupon_des"
                android:text="sfsdfsfsdfsdfsdffsdfsdfsdffsdfsfsdfsfsdfsdfsdfsfsdfdsfsfsfsdfsffsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdsfsdfsdfsdfdsfsdfsfsfasfsafsfsdfsfsdfsdf"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:id="@+id/tandc"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginBottom="10dp"
                android:text="T&amp;C"/>
        </LinearLayout>



        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.5"
            />

        <Button
            android:layout_width="0dp"
            android:text="Apply"
            android:textColor="@color/checkout_color"
            android:id="@+id/btn_apply"
            android:background="@drawable/border"
            android:layout_height="30dp"
            android:layout_weight="2.0"/>

    </LinearLayout>






</LinearLayout>