<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/uf_product"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:id="@+id/llproduct"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone">

        <TextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="error"
            android:textColor="#ff0000" />
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:id="@+id/toplayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"

                    >


                </android.support.v4.view.ViewPager>

                <wydr.sellers.slider.CirclePageIndicator
                    android:id="@+id/titles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="210dp"
                    android:paddingTop="5dp"
                    android:visibility="gone" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="#eee">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <LinearLayout
                    android:id="@+id/linearbuisness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/txtprodname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/code_bar"
                        android:gravity="center"
                        android:hint="@string/hint_product_name"
                        android:maxLength="30"
                        android:inputType="textNoSuggestions"
                        android:padding="3dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/divider"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="15sp"
                        android:maxLines="1" />

                    <EditText
                        android:id="@+id/txtprodCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="11dp"
                        android:background="@drawable/code_bar"
                        android:gravity="center"
                        android:hint="@string/hint_product_code"
                        android:inputType="textNoSuggestions"
                        android:padding="3dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/divider"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="15sp"
                        android:maxLines="1" />


                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="11dp"
                        android:background="@drawable/code_bar"
                        android:gravity="center_vertical|center|center_horizontal" />


                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="11dp"
                        android:background="@drawable/code_bar"
                        android:gravity="center_vertical|center|center_horizontal" />

                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="11dp"
                        android:background="@drawable/code_bar"
                        android:gravity="center_vertical|center|center_horizontal"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/spinner4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="11dp"
                        android:background="@drawable/code_bar"
                        android:gravity="center_vertical|center|center_horizontal"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/linearprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtmrp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="0.8"
                            android:background="@drawable/code_bar"
                            android:gravity="center"
                            android:hint="@string/hint_mrp"
                            android:inputType="textNoSuggestions|number|numberDecimal"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/divider"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="15sp"
                            android:maxLength="8"
                            android:maxLines="1"
                            />

                        <EditText
                            android:id="@+id/txtsp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/code_bar"
                            android:gravity="center"
                            android:hint="@string/hint_sp"
                            android:inputType="textNoSuggestions|number|numberDecimal"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/divider"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="15sp"
                            android:maxLength="8"
                            android:maxLines="1"
                            android:numeric="decimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtqty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="0.8"
                            android:background="@drawable/code_bar"
                            android:gravity="center"
                            android:hint="@string/hint_quantity"
                            android:inputType="textNoSuggestions|number|numberDecimal"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/divider"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="15sp"
                            android:maxLength="8"
                            android:maxLines="1"
                            android:numeric="decimal" />

                        <EditText
                            android:id="@+id/txtminqty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/code_bar"
                            android:gravity="center"
                            android:hint="@string/hint_moq"
                            android:inputType="textNoSuggestions|number|numberDecimal"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/divider"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="15sp"
                            android:maxLength="4"
                            android:maxLines="1"
                            android:numeric="decimal" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/txtpdctdescrp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:padding="3dp"
                        android:text="@string/hint_product_desc"
                        android:textColor="@color/divider"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/txtdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/code_bar"
                        android:gravity="center"
                        android:inputType="textNoSuggestions"
                        android:padding="3dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/divider"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="14sp" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtVisibility"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="@string/hint_visibility"
                            android:textColor="@color/text_color"
                            android:textSize="14sp" />

                        <RadioGroup
                            android:id="@+id/radiogrp1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioPub"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:button="@drawable/radio_sel"

                                android:paddingBottom="6dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="6dp"
                                android:paddingTop="6dp"
                                android:text="@string/_public"
                                android:textColor="@color/text_color"
                                android:textSize="14dp" />

                            <RadioButton
                                android:id="@+id/radioPri"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|right"
                                android:layout_weight="1"
                                android:button="@drawable/radio_sel"

                                android:paddingBottom="6dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="6dp"
                                android:paddingTop="6dp"

                                android:text="@string/_private"
                                android:textColor="@color/text_color"
                                android:textSize="14dp" />
                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:gravity="center"

                    >

                    <Button
                        android:id="@+id/btnskip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/skip_button"
                        android:gravity="center"
                        android:padding="6dp"
                        android:textSize="13sp"
                        android:text="@string/save_upload"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnsub"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/submit_button_buisness"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="@string/upload_now"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
        </LinearLayout>

</FrameLayout>
</LinearLayout>