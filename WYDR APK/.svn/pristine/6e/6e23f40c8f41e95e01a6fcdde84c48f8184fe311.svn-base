<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <ImageView
            android:id="@+id/share_orderThumb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/default_round_bck"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_product" />


        <TextView
            android:id="@+id/share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/share_orderThumb"
            android:layout_toRightOf="@+id/share_orderThumb"
            android:singleLine="true"
            android:text="Apple iphone"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/share_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/share_title"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/share_orderThumb"
            android:layout_toRightOf="@+id/share_orderThumb"
            android:singleLine="true"
            android:text="dsdfsd"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/share_mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/share_code"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/share_orderThumb"
            android:layout_toRightOf="@+id/share_orderThumb"
            android:singleLine="true"
            android:text="P0198"
            android:textColor="#3c3c3c"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/share_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/share_mrp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/share_orderThumb"
            android:layout_toRightOf="@+id/share_orderThumb"
            android:singleLine="true"
            android:text="29000"
            android:textStyle="bold"
            android:textColor="#3c3c3c"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/share_moq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/share_sp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/share_orderThumb"
            android:layout_toRightOf="@+id/share_orderThumb"
            android:singleLine="true"
            android:text="26000"
            android:textColor="@color/text_color"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/share_out_of_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/share_sp"
            android:paddingRight="10dp"
            android:text="@string/out_of_stock"
            android:textColor="@color/checkout_color"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />


    </RelativeLayout>

    <TextView
        android:id="@+id/share_PostedBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f3f1f2"
        android:paddingBottom="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="POSTED BY: Ravi Jain, Pooja Text Print "
        android:textColor="@color/text_color"
        android:textSize="15sp" />
</LinearLayout>