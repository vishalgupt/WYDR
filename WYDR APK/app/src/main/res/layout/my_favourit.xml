<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/actionbar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:background="#fff"
                android:orientation="vertical">


                <TabWidget
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:showDividers="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tab1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/line_with_arrow"

                            android:gravity="center"

                            android:tag="4"
                            android:text="@string/products"
                            android:textColor="#2196F3"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:typeface="sans" />


                    </LinearLayout>

                    />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tab2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/line"
                            android:gravity="center"

                            android:tag="2"
                            android:text="@string/chats"
                            android:textColor="#3c3c3c"
                            android:textSize="14dp"
                            android:typeface="sans" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tab3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/line"
                            android:gravity="center"

                            android:tag="2"
                            android:text="@string/txtsellers"
                            android:textColor="#3c3c3c"
                            android:textSize="14dp"
                            android:typeface="sans" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tab4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/line"
                            android:gravity="center"

                            android:tag="2"
                            android:text="@string/txtleads"
                            android:textColor="#3c3c3c"
                            android:textSize="14dp"
                            android:typeface="sans" />

                    </LinearLayout>
                </TabWidget>

            </LinearLayout>


            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"></android.support.v4.view.ViewPager>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>