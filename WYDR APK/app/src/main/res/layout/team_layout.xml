<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:padding="12dp">

    <ImageView
        android:id="@+id/viewUserThumbTeam"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/avtar" />

    <TextView
        android:id="@+id/txtUserNameTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="7dp"
        android:layout_toEndOf="@+id/viewUserThumbTeam"
        android:layout_toLeftOf="@+id/linearLayout5"
        android:layout_toRightOf="@+id/viewUserThumbTeam"
        android:singleLine="true"
        android:text="User Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/txtUserPhoneNumberTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtUserNameTeam"
        android:layout_alignStart="@+id/txtUserNameTeam"
        android:layout_below="@+id/txtUserNameTeam"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/linearLayout5"
        android:layout_toStartOf="@+id/linearLayout5"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Some Text"
        android:textAlignment="gravity"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_blue"
            android:padding="5dp"
            android:text="@string/owner"
            android:textColor="#ff5b4a"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtPrimaryNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_red"
            android:padding="5dp"
            android:text="@string/primary_number"
            android:textColor="@color/primary_500"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>
