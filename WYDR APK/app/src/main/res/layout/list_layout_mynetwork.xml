<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:padding="16dp">

    <ImageView
        android:id="@+id/profileMyNet"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY"
        android:src="@drawable/avtar" />

    <TextView
        android:id="@+id/MyNetworkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/profileMyNet"
        android:layout_toRightOf="@+id/profileMyNet"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="User Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/MyNetworkNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MyNetworkName"
        android:layout_alignStart="@+id/MyNetworkName"
        android:layout_below="@+id/MyNetworkName"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:singleLine="true"
        android:text="Some Text"
        android:textColor="@color/primary_text"
        android:textSize="13dp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/MyNetworkViewChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"

            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="12dp"
            android:src="@drawable/chat_unselected" />
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:visibility="gone"
           android:background="@drawable/authorize_btn"
            android:textColor="#fff"
            android:id="@+id/auth28"
            android:text="authorize"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pending28"
            android:visibility="gone"
            android:text="Pending.."/>

    </FrameLayout>

    <ImageView
        android:id="@+id/MyNetworkViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:clickable="true"
        android:focusable="false"

        android:focusableInTouchMode="false"
        android:gravity="center_vertical|center|center_horizontal"
        android:src="@drawable/myconnectionicon1"
        android:visibility="gone" />

</RelativeLayout>
